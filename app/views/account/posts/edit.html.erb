<div class="col-md-12">
  <h2 class="text-center">修改文章</h2>

  <table class="table">
    <thead>
      <tr>
        <th>Content</th>
        <th>Group Name</th>
        <th>Last Update</th>
      </tr>
    </thead>
    <tbody>
      <% @post.each do |p| %>
      <tr>
        <td><%= p.content %></td>
        <td><%= p.group.title %></td>
        <td><%= p.created_at %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
